#!/usr/bin/env bash

# resolves directory containing this script
# taken from https://stackoverflow.com/a/246128/13675
SOURCE=${BASH_SOURCE[0]}
while [ -L "$SOURCE" ]; do # resolve $SOURCE until the file is no longer a symlink
  DIR=$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )
  SOURCE=$(readlink "$SOURCE")
  [[ $SOURCE != /* ]] && SOURCE=$DIR/$SOURCE # if $SOURCE was a relative symlink, we need to resolve it relative to the path where the symlink file was located
done
DIR=$( cd -P "$( dirname "$SOURCE" )" >/dev/null 2>&1 && pwd )

cd "$DIR"/../..
OUTDIR=$(mktemp -d)
chmod 0777 "$OUTDIR"
echo "$OUTDIR"
make _benchmark > "$OUTDIR"/benchmark
make _benchmark-integration-client > "$OUTDIR"/benchmark-integration-client
make _benchmark-integration-benchmark > "$OUTDIR"/benchmark-integration-benchmark