<FileMap>
    <!-- Index page -->
    <Generate>
        <Template>index-item.html</Template>
        <Output>index-item.html</Output>
    </Generate>

{{range $f := .ProtoFile}}
    <!-- Main page for each proto file -->
    <Generate>
        <Template>tmpl.html</Template>
        <Target>{{$f.Name}}</Target>
        <Output>{{trimExt $f.Name}}.html</Output>
    </Generate>
{{end}}
</FileMap>
